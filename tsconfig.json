{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": [
      "ESNext"
    ],
    "incremental": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./",
    "composite": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "rootDirs": [],
    "typeRoots": [],
    "types": [
      "node",
      "@types/jest",
      "reflect-metadata"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [
      {
        "baseUrl": ".",
        "transform": "typescript-transform-paths", 
        "paths": {
          "*": [
            "*"
          ]
        }
      },
      {
        "baseUrl": ".",
        "transform": "typescript-transform-paths", 
        "afterDeclarations": true ,
        "paths": {
          "*": [
            "*"
          ]
        }
      }
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode"
  ]
}